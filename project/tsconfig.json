{
    "compilerOptions": {
      "outDir": "./dist/server",
      "typeRoots": ["./@types","./node_modules/@types"],
      "sourceMap": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop":true,
      "noImplicitAny": false,
      "strict": false,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "types": ["react"]
    },
    "include": [
      "./src/server/**/*",
      "./src/server/api/*",
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}
